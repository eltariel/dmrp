@using DiscordMultiRP.Bot.Data
@model IEnumerable<ProxyViewModel>

@{
    ViewData["Title"] = "Index";
    var user = ViewBag.User as User;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @if (user?.IsAllowedGlobal ?? false)
            {
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prefix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suffix)
            </th>
            @if (user?.IsAllowedGlobal ?? false)
            {
                <th>
                    @Html.DisplayNameFor(model => model.IsGlobal)
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @if (user?.Role == Role.Admin)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prefix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suffix)
            </td>
            @if (user?.IsAllowedGlobal ?? false)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.IsGlobal)
                </td>
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
