@model DiscordMultiRP.Bot.Data.Channel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Channel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DiscordId" class="control-label"></label>
                @*<input asp-for="DiscordId" class="form-control" />*@
                <select asp-for="DiscordId" asp-items="ViewBag.Channels" class="form-control"></select>
                <span asp-validation-for="DiscordId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsMonitored" /> @Html.DisplayNameFor(model => model.IsMonitored)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
